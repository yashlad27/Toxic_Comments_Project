   "source": [
    "train['comment_text'].fillna('fillna')\n",
    "test['comment_text'].fillna('fillna')\n",
    "x_train=train['comment_text'].str.lower()\n",
    "y_train=train[[\"toxic\", \"severe_toxic\", \"obscene\", \"threat\", \"insult\", \"identity_hate\"]].values\n",
    "x_test=test['comment_text'].str.lower()"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 14,
   "metadata": {},
   "outputs": [],
   "source": [
    "embed_size=100\n",
    "max_features=20000\n",
    "max_len=100"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 11,
   "metadata": {},
   "outputs": [],
   "source": [
    "tokenizer= Tokenizer(num_words=max_features,lower= True)\n",
    "tokenizer.fit_on_texts(list(x_train))\n",
    "tokenized_train=tokenizer.texts_to_sequences(x_train)\n",
    "tokenized_test=tokenizer.texts_to_sequences(x_test)\n",
    "train_x=pad_sequences(tokenized_train,maxlen=max_len)\n",
    "test_x=pad_sequences(tokenized_test,maxlen=max_len)\n"
   ]
  },
